@model IEnumerable<latihanLogSig9.Models.SOHeader>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>

<div class="container">
    <br />
    <div style="width:90%; margin:0 auto;">
        <table id="id_table" class="table table-striped table-bordered dt-responsive nowrap" width="100%" cellspacing="0">
            <thead>
                <tr>
                    @*<th>Member ID</th>*@
                    <th>Nama Member</th>
                    <th>Tanggal</th>
                    <th>Rincian</th>
                    <th>Ubah</th>
                    <th>Hapus</th>
                </tr>
            </thead>
        </table>
    </div>
</div>



@section Scripts{

    <script>

        var dataTable;

        $(document).ready(function () {
            GetTable()

        });

        function GetTable() {
            $.ajax({
                type: 'GET',
                crossDomain: true,
                url: '/api/SOHeader',
                success: function (data) {
                    console.log(data);
                    var table = $('#id_table').DataTable()
                    table.destroy();
                    $('#id_table').DataTable({
                        'paging': true,
                        'lengthChange': true,
                        'searching': true,
                        'ordering': true,
                        'info': true,
                        'scrollX': true,
                        'scrollY': 300,
                        'scrollCollapse': true,
                        'data': data,
                        'columns': [
                            //{ data: 'memberId'},
                            { data: 'member.namaMember' },
                            { data: 'tanggal' },

                            {
                                "render": function (data, type, full, meta) {
                                    return '<a class="btn btn-warning" href="/SOHeader/Details/' + full.soHeaderID + '">Details</a>';
                                }
                            },
                            {
                                "render": function (data, type, full, meta) {
                                    return '<a class="btn btn-info" href="/SOHeader/Edit/' + full.soHeaderID + '">Edit</a>';
                                }
                            },
                            {
                                "data": "null",
                                "render": function (data, type, row) {
                                    return "<a class='btn btn-danger btn-sm' onclick=Delete('" + row.soHeaderID + "')><i class='fa fa-trash'></i>Delete</a>";
                                }
                            }
                        ],

                        "pagingType": "full_numbers",
                        language: {
                            search: "_INPUT_",
                            searchPlaceholder: "Search records",
                        }
                    })
                }
            })
        }

        function Delete(id) {
            swal({
                title: "Apakah kamu yakin?",
                text: "Sekali dihapus, kamu tidak mengembalikan data ini kembali!",
                icon: "warning",
                buttons: true,
                dangerMode: true,
            })
                .then((willDelete) => {
                    if (willDelete) {
                        $.ajax({
                            type: 'DELETE',
                            url: '/api/SOHeader/' + id,
                            success: function (data) {
                                if (data.success) {
                                    swal("Data berhasil dihapus!", {
                                        icon: "success",
                                    });
                                    dataTable.ajax.reload();

                                }
                            }
                        });

                    } else {
                        swal("Datamu berhasil dijaga!");
                    }
                    location.reload();
                });
        }

        function ShowMessage(msg) {
            toastr.success(msg);
        }

    </script>
}
